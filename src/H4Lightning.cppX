H4Lightning::H4Lightning(uint16_t _port): H4AsyncServer(_port){ 
    _client_cb=[=](tcp_pcb* tpcb){ 
        new H4L_request(tpcb); 
        tcp_backlog_accepted(tpcb);
    };
}

void H4Lightning::begin(){
    handlers.push_back(new H4L_handlerFile());
    handlers.push_back(new H4L_handler404());
    H4AsyncServer::begin();
}

void H4Lightning::reset(){
    H4AT_PRINT2("H4Lightning::reset nH=%d\n",handlers.size());
    for(auto &h:handlers){ delete h; }
    handlers.clear();
    handlers.shrink_to_fit();
    H4AT_PRINT2("H4Lightning::reset nH=%d\n",handlers.size());
}
