void H4L_handlerSSE::onClient(H4L_request* r){
    H4AT_PRINT1("SSE HANDLER saving rqst 0x%08x\n",r); 
    auto _c=new H4L_SSEClient(r);
    r->addHeader("Cache-Control","no-cache");
    r->send(200,"text/event-stream; charset=utf-8",13,"retry: 5000\n\n");
    _cbConnect(_c);
    _clients.push_back(_c);
//            _keepAlive=h4.every(20000,[=]{ send(":\n\n"); }); // name it
}

void H4L_SSEClient::send(const char *message, const char *event, uint32_t id, uint32_t reconnect){
    _lastID=id;
    String m=generateEventMessage(message,event,id,reconnect);
    H4AT_PRINT1("send via 0x%08x %s\n",_client,m.c_str());
    _client->txdata((const uint8_t *) m.c_str(),m.length());
}
